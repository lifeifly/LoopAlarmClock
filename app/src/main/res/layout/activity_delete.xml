<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".DeleteActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_back_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_bt" />

        <TextView
            android:id="@+id/select_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择0项"
            android:textColor="@color/tabNormal"
            android:textSize="20sp" />


    </RelativeLayout>

    <ListView
        android:id="@+id/delete_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/delete"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/tabNormal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_selectall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/selectall"
                android:gravity="center"
                android:text="全选"
                android:textColor="@color/tabNormal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>